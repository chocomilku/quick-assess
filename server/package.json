{
	"name": "server",
	"version": "0.0.0",
	"scripts": {
		"dev": "ts-node-dev --respawn -r tsconfig-paths/register ./server.ts",
		"start": "ts-node -r tsconfig-paths/register ./server.ts",
		"migration:new": "ts-node -r tsconfig-paths/register ./src/utils/generateMigration.ts",
		"migration:down": "ts-node -r tsconfig-paths/register ./src/utils/revertLatestMigration.ts"
	},
	"dependencies": {
		"better-sqlite3": "^9.6.0",
		"cors": "^2.8.5",
		"dotenv": "^16.4.5",
		"envalid": "^8.0.0",
		"express": "^4.19.2",
		"kysely": "^0.27.3",
		"module-alias": "^2.2.3",
		"morgan": "^1.10.0",
		"signale": "^1.4.0",
		"winston": "^3.13.0",
		"zod": "^3.23.8",
		"zod-validation-error": "^3.3.0"
	},
	"devDependencies": {
		"@types/better-sqlite3": "^7.6.10",
		"@types/cors": "^2.8.17",
		"@types/express": "^4.17.21",
		"@types/morgan": "^1.9.9",
		"@types/node": "^20.12.11",
		"@types/signale": "^1.4.7",
		"ts-node": "^10.9.2",
		"ts-node-dev": "^2.0.0",
		"tsconfig-paths": "^4.2.0"
	},
	"_moduleAliases": {
		"@*": "src/*"
	},
	"signale": {
		"displayScope": true,
		"displayBadge": true,
		"displayTimestamp": true,
		"displayDate": true,
		"underlineLabel": true
	}
}
